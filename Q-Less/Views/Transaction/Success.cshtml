@model Q_Less.Models.Transaction
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6 col-xs-push-3">
                <h2>TRANSACTION COMPLETED</h2>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-md-3 col-xs-push-5">
                <p>Summary</p>
            </div>
        </div>
        <hr class="alert-danger" />
        <div class="row">
            <div class="col-md-3 col-xs-push-3">
                <h4 class="text-small">Entry Point</h4>
            </div>
            <div class="col-md-3 col-xs-push-4">
                <h4 class="text-danger">@Model.ExitPoint</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-xs-push-3">
                <h4 class="text-small">Exit Point</h4>
            </div>
            <div class="col-md-3 col-xs-push-4">
                <h4 class="text-danger">@Model.ExitPoint</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-xs-push-4">
                <h3 class="text-danger">Amount</h3>
            </div>
            <div class="col-md-3 col-xs-push-4">
                <h3 class="text-danger">@Model.Amount</h3>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 col-xs-push-10">
                <button type="submit" class="btn btn-info">Return to Home</button>
            </div>
        </div>
    </div>
}
else
{
    <h1>No Transaction</h1>
}

